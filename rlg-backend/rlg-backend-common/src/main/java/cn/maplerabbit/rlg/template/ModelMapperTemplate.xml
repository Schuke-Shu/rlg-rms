<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- modify namespace -->
<mapper namespace="cn.maplerabbit.rlg.template.ModelMapperTemplate">
    <!-- ========== Base CRUD ========== -->
    <sql id="BaseColumns">
        <!-- add base columns -->
    </sql>
    <sql id="save">

    </sql>
    <sql id="saveBatch">

    </sql>

    <resultMap id="BaseResultMap" type="">
        <id column="" property="" />
        <result column="" property="" />
    </resultMap>

    <insert id="save" useGeneratedKeys="true" keyColumn="" keyProperty="">
        insert into xxx(
            <include refid="BaseColumns" />
        ) values (
            <include refid="save" />, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP
        )
    </insert>

    <insert id="saveBatch" useGeneratedKeys="true" keyColumn="" keyProperty="">
        insert into xxx(
            <include refid="BaseColumns" />
        ) values
        <foreach collection="list" item="i" separator=", ">
            (<include refid="saveBatch" />, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP)
        </foreach>
    </insert>

    <delete id="remove">
        delete from xxx where xxx = #{pk}
    </delete>

    <delete id="removeBatch">
        delete from xxx where xxx in
        <foreach collection="list" item="pk" open="(" close=")" separator=", ">#{pk}</foreach>
    </delete>

    <update id="update">
        update xxx
        <set>
            <if test="xxx">xxx</if>
            modified_time = CURRENT_TIMESTAMP
        </set>
        <where>
            xxx = #{xxx}
        </where>
    </update>

    <select id="query" resultMap="BaseResultMap">
        select
            <include refid="BaseColumns" />
        from xxx
        <where>
            xxx = #{pk}
        </where>
    </select>

    <select id="queryBatch" resultMap="BaseResultMap">
        select
            <include refid="BaseColumns" />
        from xxx
        <where>
            xxx in
            <foreach collection="list" item="pk" open="(" close=")" separator=", ">#{pk}</foreach>
        </where>
    </select>

    <select id="count" resultType="int">
        select count(*) from xxx
    </select>
</mapper>