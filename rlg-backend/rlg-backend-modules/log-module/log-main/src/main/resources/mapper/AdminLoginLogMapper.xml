<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.maplerabbit.rlg.module.log.mapper.AdminLoginLogMapper">
    <!-- ========== Base CRUD ========== -->
    <sql id="BaseColumns">
        id, admin_id, admin_name, ip, engine, time, create_time, modified_time
    </sql>
    <sql id="save">
        null, #{adminId}, #{adminName}, #{ip}, #{engine}, #{time}
    </sql>
    <sql id="saveBatch">
        null, #{i.adminId}, #{i.adminName}, #{i.ip}, #{i.engine}, #{i.time}
    </sql>

    <resultMap id="BaseResultMap" type="cn.maplerabbit.rlg.pojo.log.entity.AdminLoginLog">
        <id column="id" property="id" />
        <result column="admin_id" property="adminId" />
        <result column="admin_name" property="adminName" />
        <result column="ip" property="ip" />
        <result column="engine" property="engine" />
        <result column="time" property="time" />
        <result column="create_time" property="createTime" />
        <result column="modified_time" property="modifiedTime" />
    </resultMap>

    <insert id="save" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into admin_login_log(
            <include refid="BaseColumns" />
        ) values (
            <include refid="save" />, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP
        )
    </insert>

    <insert id="saveBatch" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into admin_login_log(
            <include refid="BaseColumns" />
        ) values
        <foreach collection="list" item="i" separator=", ">
            (<include refid="saveBatch" />, CURRENT_TIMESTAMP, CURRENT_TIMESTAMP)
        </foreach>
    </insert>

    <delete id="remove">
        delete from admin_login_log where id = #{pk}
    </delete>

    <delete id="removeBatch">
        delete from admin_login_log where id in
        <foreach collection="list" item="pk" open="(" close=")" separator=", ">#{pk}</foreach>
    </delete>

    <update id="update">
        update admin_login_log
        <set>
            <if test="adminId != null">admin_id = #{adminId},</if>
            <if test="adminName != null">admin_name = #{adminName},</if>
            <if test="engine != null">engine = #{engine},</if>
            <if test="ip != null">ip = #{ip},</if>
            <if test="time != null">time = #{time},</if>
            modified_time = CURRENT_TIMESTAMP
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <select id="query" resultMap="BaseResultMap">
        select
            <include refid="BaseColumns" />
        from admin_login_log
        <where>
            id = #{pk}
        </where>
    </select>

    <select id="queryBatch" resultMap="BaseResultMap">
        select
            <include refid="BaseColumns" />
        from admin_login_log
        <where>
            id in
            <foreach collection="list" item="pk" open="(" close=")" separator=", ">#{pk}</foreach>
        </where>
    </select>

    <select id="count" resultType="int">
        select count(*) from admin_login_log
    </select>
</mapper>